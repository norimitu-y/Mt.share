<div class=show_area>
  <div>
    <div class="uk-card uk-card-default">
      <div class="uk-card-media-top">
        <%= image_tag @post.image %>
      </div>
      <div class="uk-card-body">
        <h3 class="uk-card-title">
          <%= @post.title %>
        </h3>
        <p><%= @post.content %></p>
        <p>更新日：<%= @post.created_at %></p>
      </div>
    </div>
  </div>
</div>
