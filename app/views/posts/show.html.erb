<!DOCTYPE html>
<html>
  <head>
    <title>MtShare</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <hr id="hr">
  <ul class="uk-iconnav">
    <li><a href="/" class="uk-icon-link" uk-icon="icon: home; ratio: 1.3"></a></li>
    <li><a href="#" class="uk-icon-link" uk-icon="icon: comment; ratio: 1.3"></a></li>
  </ul>
  <hr>
  <div class=show_area>
    <div>
      <div class="uk-card uk-card-default uk-card-hover">
        <div class="uk-card-media-top">
          <%= image_tag @post.image %>
        </div>
        <div class="uk-card-body">
          <h3 class="uk-card-title">
            <%= @post.title %>
          </h3>
          <p><%= @post.content %></p>
          <p>更新日：<%= @post.created_at %></p>
        </div>
      </div>
    </div>
  </div>
  <div id="comments_area">
    <%= render partial: "comments/index", locals: {comments: @comments, post: @post} %>
  </div>
    <%= render partial: "comments/form", locals: {comment: @comment, post: @post} %>
</html>
