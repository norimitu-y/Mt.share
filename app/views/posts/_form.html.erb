<div uk-grid  class="uk-grid-divider uk-grid-small">
  <aside class="uk-width-1-3@s"></aside>
  <main class="uk-width-2-3@s">
    <div class="new_area">
      <%= form_with(model: @post, local: true) do |form| %>

        <% if @post.errors.any? %>
          <div uk-alert class="uk-alert-danger">
            <a class="uk-alert-close" uk-close></a>
            <h3><%= @post.errors.count %>件のエラーがあります</h3>
            <ul>
              <% @post.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <h3 class=new_title>新しく投稿する</h3>
        <div uk-grid class="uk-grid-small">
          <div class="uk-width-1-5">
            <div class="uk-section uk-section-xsmall">
              <p class="new_name line-height">山 名</p>
            </div>
          </div>
          <div class="uk-width-4-5">
            <div class="uk-section  uk-section-xsmall">
              <%= form.text_field :title, class: "new_name_form uk-box-shadow-small" %>
            </div>
          </div>
          <div class="uk-width-1-5">
            <div class="uk-section uk-section-xsmall">
              <p class="new_name line-height">コメント</p>
            </div>
          </div>
          <div class="uk-width-4-5">
            <div class="uk-section uk-section-xsmall">
              <%= form.text_area :content, class: "new_content_form uk-box-shadow-small" %>
            </div>
          </div>
          <div class="uk-width-1-5">
            <div class="uk-section uk-section-xsmall">
              <p class="new_name line-height">写 真</p>
            </div>
          </div>
          <div class="uk-width-4-5">
            <div class="uk-section uk-section-xsmall">
              <%= form.file_field :image, class: "new_image_form" %>
            </div>
          </div>
        </div>
        <div class="btn_new">
          <%= form.submit class: "uk-button uk-button-default uk-button-small uk-box-shadow-medium", value: "投 稿" %>
        </div>
      <% end %>
    </div>
  </main>
</div>
