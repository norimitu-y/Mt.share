<div uk-grid  class="uk-grid-divider uk-grid-small">
  <aside class="uk-width-1-3@s"></aside>
  <main class="uk-width-2-3@s">
    <div class="area">
      <% @posts.reverse_each do |post| %>
        <div class="uk-card uk-card-default uk-card-hover uk-grid-collapse uk-child-width-1-4@s uk-margin" uk-grid>
          <div class="uk-card-media-left uk-cover-container">
            <%= image_tag post.image %>
          </div>
          <div class="uk-card-body">
            <%= post.title %>
            <p>
              <a href="/posts/<%= post.id %>" class="uk-icon-link" uk-icon="forward"></a>
              <a href="/posts/<%= post.id %>/edit" class="uk-icon-link" uk-icon="file-edit"></a>
            </p>
          </div>
        </div>
      <% end %>
    </div>
  </main>
</div>
