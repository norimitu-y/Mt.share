<h3 class=new_user_title>新規登録する</h3>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div uk-grid class="uk-grid-small">
    <div class="uk-width-1-3">
      <div class="uk-section uk-section-xsmall">
        <p class="f_name line-height">メールアドレス</p>
      </div>
    </div>
    <div class="uk-width-2-3">
      <div class="uk-section  uk-section-xsmall">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "f_name_form uk-box-shadow-small" %>
      </div>
    </div>

    <div class="uk-width-1-3">
      <div class="uk-section uk-section-xsmall">
        <p class="f_name line-height">パスワード</p>
      </div>
    </div>
    <div class="uk-width-2-3">
      <div class="uk-section  uk-section-xsmall">
        <%= f.password_field :password, autocomplete: "new-password", class: "f_name_form uk-box-shadow-small" %>
      </div>
    </div>
    <div class="uk-width-1">
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %>
    </div>

    <div class="uk-width-1-3">
      <div class="uk-section uk-section-xsmall">
        <p class="f_name line-height">確認用パスワード</p>
      </div>
    </div>
    <div class="uk-width-2-3">
      <div class="uk-section  uk-section-xsmall">
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "f_name_form uk-box-shadow-small" %>
      </div>
    </div>
  </div>

  <div class="btn_f">
    <%= f.submit "登 録", class: "uk-button uk-button-default uk-button-small uk-box-shadow-medium" %>
  </div>
<% end %>
